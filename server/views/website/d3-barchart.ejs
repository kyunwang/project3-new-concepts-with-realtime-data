  <svg id="harvest"></svg>

  <script type="text/javascript">
    var svg = d3.select("#harvest");

    var graph = document.getElementById('harvest').parentNode;
    var graphWidth = graph.offsetWidth;
    var graphHeight = graph.offsetHeight;

    var margin = {top: 20, right: 20, bottom: 70, left: 40};

    var width = graphWidth - margin.left - margin.right;
    var height = graphHeight - margin.top - margin.bottom;

		var parseTime = d3.timeParse("%Y-%m-%d");

		var x = d3.scaleTime().rangeRound([0,width]),
		    y = d3.scaleLinear().rangeRound([height, 0]);

		var g = svg.append("g")
		    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

		d3.csv("/productionAquaponics.csv").then(function (data) {

		data.forEach(function (d){
			console.log(parseTime(d.Date));
			d.Date = parseTime(d.Date);
	})

			x.domain(d3.extent(data, function(d) { return d.Date; }));
			y.domain(d3.extent(data, function(d) { return parseInt(d.herbs); }));

			g.append("g")
				.attr("transform", "translate(0," + height + ")")
				.call(d3.axisBottom(x))
        .selectAll("text")
          .style("text-anchor", "end")
          .attr("dx", "-.8em")
          .attr("dy", ".15em")
          .attr("transform", function(d) {
            return "rotate(-90)"
          });

				g.append("g")
		      .call(d3.axisLeft(y))
		    .append("text")
		      .attr("fill", "#141414")
		      .attr("transform", "rotate(-90)")
		      .attr("y", 9)
		      .attr("dy", "1em")
		      .attr("text-anchor", "end")
		      .text("harvested in KG");

			g.selectAll(".bar")
    .data(data)
    .enter().append("rect")
      .attr("class", "bar")
      .attr("x", function(d) { return x(d.Date); })
      .attr("y", function(d) { return y(d.herbs); })
      .attr("width", 10)
      .attr("height", function(d) {  return height - y(d.herbs); });

		});
  </script>
